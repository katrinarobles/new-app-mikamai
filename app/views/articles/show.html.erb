<div class="container">

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @article.photo.key %>)">
  <h1><%= @article.title %></h1>
</div>

  <div class="row justify-content-center">
    <div class="col-8 m-2">
      <div class="ava-n-title">
        <div class="ava">
              <%= cl_image_tag @article.user.photo.key, class: "avatar-large" %>
        </div>
        <div class="title">
            <h2>Author: <%= @article.author%></h2>
        </div>
      </div>
      <p> <%= @article.text.gsub(/\[.*\]/, "") %></p>
      <% if @article.url? %>
        <p> <%= link_to 'Read More', @article.url %></p>
      <% end %>
      <p> <% if policy(@article).edit? %><%= link_to edit_article_path(@article) do %><i class="far fa-edit"></i> <% end %><% end %>
          <% if policy(@article).destroy? %><%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure you would like to delete?" } do %> <i class="far fa-trash-alt"></i> <% end %><% end %></p>

      <p>Created at: <%= @article.created_at%> || Last Updated: <%= @article.updated_at%></p>
      <p> </p>
      <p><%= link_to "Write an article", new_article_path, class: "btn btn-ghost" %>
        <%= link_to "Read Other Articles", "articles_path", class: "btn btn-gradient" %> </p>
    </div>
  </div>
</div>
