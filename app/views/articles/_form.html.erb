<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 m-2">
      <%= simple_form_for [ @article ] do |f| %>
        <%= f.input :title, label: 'Title' %>
        <%= f.input :text, label: "Whacha think?" %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
